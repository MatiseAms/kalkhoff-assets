{
  "name": "kalkhoff-assets",
  "version": "0.2.0",
  "description": "Kalkhoff - Brand Appearance Guide Assets",
  "main": "assets.scss",
  "scripts": {
    "test": "npm run test",
    "build-extend": "node-sass --output-style expanded --source-map true assets.scss css/assets.css",
    "build-classes": "node-sass --output-style expanded --source-map true assets-classes.scss css/assets-classes.css",
    "sass-less": "sass2less scss/**/*.scss 'less/**/*.less'",
    "sass2less": "sass2less scss/extend/grid/_functions.scss 'less/extend/grid/_functions.less'"
  },
  "repository": {
    "type": "git",
    "url": "github.com/MatiseAms/kalkhoff-assets.git"
  },
  "keywords": [
    "kalkhoff",
    "scss",
    "fonts",
    "assets"
  ],
  "author": "Sil van Diepen - Matise",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "cssnano": "^3.10.0",
    "less-plugin-functions": "^1.0.0",
    "node-sass": "^4.6.0",
    "postcss-cli": "^4.1.1",
    "postcss-discard-duplicates": "^2.1.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "less": "^2.7.3",
    "less-plugin-sass2less": "^1.1.0"
  }
}
